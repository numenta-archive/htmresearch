---
root: true
# ESLint Config
# http://eslint.org/docs/user-guide/configuring

extends: eslint:recommended
parser: "babel-eslint"
plugins:
- react
# Disable 'jsdoc' plugin for now
#  - jsdoc

env:
  browser: true
  es6: true
  commonjs: true
  mocha: true
  node: true

ecmaFeatures:
  arrowFunctions: true
  binaryLiterals: true
  blockBindings: true
  classes: true
  defaultParams: true
  destructuring: true
  experimentalObjectRestSpread: false
  forOf: true
  generators: true
  globalReturn: false
  jsx: true
  modules: true
  objectLiteralComputedProperties: true
  objectLiteralDuplicateProperties: true
  objectLiteralShorthandMethods: true
  objectLiteralShorthandProperties: true
  octalLiterals: true
  regexUFlag: true
  regexYFlag: true
  restParams: true
  spread: true
  superInFunctions: true
  templateStrings: true
  unicodeCodePointEscapes: true

# http://eslint.org/docs/rules/
rules:
  accessor-pairs: 2
  array-bracket-spacing: [2, "never"]
  arrow-parens: 2
  arrow-spacing: 2
  block-scoped-var: 2
  block-spacing: 2
  brace-style: [2, "1tbs"]
  callback-return: 1
  camelcase: [2, {"properties":"never"}]
  comma-dangle: [2, "never"]
  comma-style: 2
  complexity: [1, 12]
  computed-property-spacing: 2
  constructor-super: 2
  default-case: 1
  dot-location: 0
  eqeqeq: [2, "smart"]
  func-names: 0
  func-style: [2, "declaration"]
  generator-star-spacing: [2, {"before":false, "after":true}]
  global-require: 1
  guard-for-in: 0
  handle-callback-err: 2
  id-match: 0
  indent: [2, 2]
  init-declarations: 0
# Disable 'jsdoc' plugin for now
#  jsdoc/check-param-names: 1
#  jsdoc/check-redundant-params: 1
#  jsdoc/check-redundant-returns: 1
#  jsdoc/check-returns-types: 1
#  jsdoc/check-types: 1
#  jsdoc/newline-after-description: 1
#  jsdoc/require-description-complete-sentence: 1
#  jsdoc/require-param: 1
#  jsdoc/require-param-description: 1
#  jsdoc/require-param-types: 1
#  jsdoc/require-returns-description: 1
#  jsdoc/require-returns-types: 1
  jsx-quotes: [2, "prefer-double"]
  linebreak-style: 2
  lines-around-comment: 0
  max-depth: [1, 3]
  max-len: [1, 80, 4, {"ignoreComments": true, "ignoreUrls": true, "ignorePattern": "^\\s*import\\s.\\s*$"}]
  max-nested-callbacks: [1,3]
  max-statements: [1, 20]
  new-cap: 1
  newline-after-var: 0
  no-class-assign: 2
  no-console: 1
  no-const-assign: 2
  no-constant-condition: 0
  no-continue: 0
  no-control-regex: 1
  no-debugger: 2
  no-delete-var: 2
  no-div-regex: 1
  no-dupe-args: 2
  no-dupe-class-members: 2
  no-dupe-keys: 2
  no-duplicate-case: 2
  no-else-return: 2
  no-empty: 1
  no-empty-character-class: 2
  no-eq-null: 2
  no-ex-assign: 2
  no-extend-native: 2
  no-extra-boolean-cast: 2
  no-extra-semi: 2
  no-fallthrough: 2
  no-floating-decimal: 2
  no-func-assign: 1
  no-implicit-coercion: 2
  no-inline-comments: 0
  no-inner-declarations: 2
  no-invalid-regexp: 2
  no-invalid-this: 2
  no-irregular-whitespace: 2
  no-lonely-if: 2
  no-mixed-requires: 0
  no-mixed-spaces-and-tabs: 2
  no-multiple-empty-lines: [2, {"max":2}]
  no-negated-condition: 0
  no-negated-in-lhs: 2
  no-nested-ternary: 2
  no-new-require: 2
  no-obj-calls: 2
  no-octal: 2
  no-param-reassign: 0
  no-path-concat: 2
  no-process-env: 2
  no-redeclare: 2
  no-regex-spaces: 2
  no-restricted-modules: 0
  no-restricted-syntax: 0
  no-self-compare: 2
  no-sparse-arrays: 2
  no-sync: 1
  no-this-before-super: 2
  no-throw-literal: 2
  no-undef: 2
  no-undefined: 2
  no-unexpected-multiline: 2
  no-unneeded-ternary: 2
  no-unreachable: 2
  no-unused-vars: [2, {"vars":"all", "args":"none"}]
  no-useless-call: 2
  no-useless-concat: 2
  no-var: 1
  no-void: 2
  no-warning-comments: 1
  object-curly-spacing: [2, "never"]
  object-shorthand: 1
  one-var: [2, {"uninitialized":"always", "initialized":"never"}]
  operator-assignment: 2
  operator-linebreak: 2
  padded-blocks: 0
  prefer-arrow-callback: 1
  prefer-const: 0
  prefer-reflect: 1
  prefer-spread: 2
  prefer-template: 2
  quotes: [2, "single", "avoid-escape"]
  quote-props: [2, "as-needed"]
  radix: 2
  require-yield: 1
  sort-vars: 1
  space-after-keywords: [2, "always"]
  space-before-blocks: [2, "always"]
  space-before-function-paren: [2, {"anonymous":"always", "named":"never"}]
  space-before-keywords: [2, "always"]
  space-in-parens: [2, "never"]
  spaced-comment: [2, "always"]
  strict: [2, "global"]
  use-isnan: 2
  valid-typeof: 2
  valid-jsdoc: [1, {"requireReturn": false, "requireReturnDescription": false}]
  vars-on-top: 2
  wrap-iife: 2
  wrap-regex: 0
